<LinearLayout android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingVertical="@dimen/margin_small"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/progress_worst"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_little"
        android:layout_marginEnd="@dimen/margin_little"
        app:trackCornerRadius="@dimen/progress_corner_radius"
        app:trackColor="@color/defaultColor"
        android:layout_weight="1"/>
    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/progress_weak"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_little"
        android:layout_marginEnd="@dimen/margin_little"
        app:trackColor="@color/defaultColor"
        app:trackCornerRadius="@dimen/progress_corner_radius"
        android:layout_weight="1"/>
    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/progress_medium"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_little"
        android:layout_marginEnd="@dimen/margin_little"
        app:trackCornerRadius="@dimen/progress_corner_radius"
        app:trackColor="@color/defaultColor"
        android:layout_weight="1"/>
    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/progress_good"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_little"
        android:layout_marginEnd="@dimen/margin_little"
        app:trackColor="@color/defaultColor"
        app:trackCornerRadius="@dimen/progress_corner_radius"
        android:layout_weight="1"/>
    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/progress_excellent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_little"
        android:layout_marginEnd="@dimen/margin_little"
        app:trackCornerRadius="@dimen/progress_corner_radius"
        app:trackColor="@color/defaultColor"
        android:layout_weight="1"/>
</LinearLayout>