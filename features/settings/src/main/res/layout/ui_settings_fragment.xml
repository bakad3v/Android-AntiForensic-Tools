<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <com.sonozaki.settings.presentation.views.SettingsItemMenuView
            android:id="@+id/theme_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:mainText="@string/theme">

        </com.sonozaki.settings.presentation.views.SettingsItemMenuView>

        <com.sonozaki.settings.presentation.views.SettingsItemSwitchView
            android:id="@+id/allow_screenshots"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:mainText="@string/allow_screenshots">
        </com.sonozaki.settings.presentation.views.SettingsItemSwitchView>
    </LinearLayout>
</ScrollView>